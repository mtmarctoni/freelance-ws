---
// Hero section component
---

<section id="home" class="pt-16 min-h-screen flex items-center bg-gradient-to-br from-primary-50 via-white to-secondary-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="text-center lg:text-left animate-slide-up">
        <!-- Brand Badge -->
        <div class="inline-flex items-center px-4 py-2 bg-primary-100 text-primary-800 rounded-full text-sm font-medium mb-6">
          <span class="w-2 h-2 bg-primary-600 rounded-full mr-2 animate-pulse"></span>
          CodeCraft Studio - Where Ideas Become Reality
        </div>
        
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight mb-6">
          Transform Your Business with
          <span class="text-primary-600 block">Modern Web Solutions</span>
          <span class="text-secondary-600">& Blockchain Innovation</span>
        </h1>
        
        <p class="text-xl text-gray-600 mb-8 leading-relaxed">
          I'm Marc Toni, founder of CodeCraft Studio. I help businesses and entrepreneurs 
          build powerful web applications, automate processes, and leverage cutting-edge 
          blockchain technology to stay ahead of the competition.
        </p>
        
        <!-- Value Propositions -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-8">
          <div class="flex items-center justify-center lg:justify-start">
            <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center mr-3">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <div class="text-left">
              <div class="font-semibold text-gray-900">Fast Delivery</div>
              <div class="text-sm text-gray-600">2-8 weeks</div>
            </div>
          </div>
          
          <div class="flex items-center justify-center lg:justify-start">
            <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="text-left">
              <div class="font-semibold text-gray-900">Quality Assured</div>
              <div class="text-sm text-gray-600">100% satisfaction</div>
            </div>
          </div>
          
          <div class="flex items-center justify-center lg:justify-start">
            <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center mr-3">
              <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
              </svg>
            </div>
            <div class="text-left">
              <div class="font-semibold text-gray-900">Fair Pricing</div>
              <div class="text-sm text-gray-600">From â‚¬1,200</div>
            </div>
          </div>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a href="#contact" class="bg-primary-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-primary-700 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl">
            Start Your Project Today
          </a>
          <a href="#portfolio" class="border border-gray-300 text-gray-700 px-8 py-4 rounded-lg font-semibold hover:border-primary-600 hover:text-primary-600 transition-colors">
            View Success Stories
          </a>
        </div>
        
        <!-- Stats -->
        <div class="grid grid-cols-3 gap-6 mt-12 pt-8 border-t border-gray-200">
          <div class="text-center lg:text-left">
            <div class="text-2xl font-bold text-primary-600">25+</div>
            <div class="text-sm text-gray-600">Projects Delivered</div>
          </div>
          <div class="text-center lg:text-left">
            <div class="text-2xl font-bold text-primary-600">3+</div>
            <div class="text-sm text-gray-600">Years Experience</div>
          </div>
          <div class="text-center lg:text-left">
            <div class="text-2xl font-bold text-primary-600">100%</div>
            <div class="text-sm text-gray-600">Client Satisfaction</div>
          </div>
        </div>
      </div>
      
      <!-- Hero Image -->
      <div class="relative animate-float">
        <div class="relative z-10">
          <img 
            src="https://marctonimas.com/profile-picture.jpeg"
            alt="Marc Toni - Founder of CodeCraft Studio"
            class="w-80 h-80 rounded-full mx-auto object-cover shadow-2xl border-8 border-primary-600/80"
            loading="eager"
          />
          
          <!-- Floating Badge -->
          <div class="absolute -bottom-4 left-1/2 transform -translate-x-1/2 bg-white rounded-full px-6 py-3 shadow-lg border border-gray-200">
            <div class="flex items-center space-x-2">
              <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
              <span class="text-sm font-medium text-gray-900">Available for Projects</span>
            </div>
          </div>
        </div>
        
        <!-- Floating elements -->
        <div class="absolute -top-4 -right-4 w-20 h-20 bg-primary-100 rounded-full animate-pulse"></div>
        <div class="absolute -bottom-4 -left-4 w-16 h-16 bg-secondary-100 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
        <div class="absolute top-1/2 -right-8 w-12 h-12 bg-accent-100 rounded-full animate-pulse" style="animation-delay: 2s;"></div>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <a href="#services" class="text-gray-400 hover:text-primary-600 transition-colors">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </a>
  </div>
</section>