<section id="home" class="pt-16 min-h-screen flex items-center bg-gradient-to-br from-primary-50 via-white to-secondary-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="text-center lg:text-left animate-slide-up">
        <!-- Brand Badge -->
        <div class="inline-flex items-center px-4 py-2 bg-primary-100 text-primary-800 rounded-full text-sm font-medium mb-6">
          <span class="w-2 h-2 bg-primary-600 rounded-full mr-2 animate-pulse"></span>
          CodeCraft Studio - Where Ideas Become Reality
        </div>
        
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight mb-6">
          Transform Your Business with
          <span class="text-primary-600 block">Modern Web Solutions</span>
          <span class="text-secondary-600">& Blockchain Innovation</span>
        </h1>
        
        <p class="text-xl text-gray-600 mb-8 leading-relaxed">
          We help businesses and entrepreneurs build powerful web applications, automate processes, 
          and leverage cutting-edge blockchain technology to stay ahead of the competition. 
          From concept to deployment, we deliver solutions that drive real results.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start mb-8">
          <a href="#contact" class="bg-primary-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-primary-700 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl">
            Start Your Project Today
          </a>
          <a href="#portfolio" class="border border-gray-300 text-gray-700 px-8 py-4 rounded-lg font-semibold hover:border-primary-600 hover:text-primary-600 transition-colors">
            View Success Stories
          </a>
        </div>
      </div>
      
      <!-- Enhanced Visual Elements -->
      <div class="relative animate-float">
        <!-- Main Card -->
        <div class="relative z-10 bg-gradient-to-br from-primary-600 to-secondary-600 rounded-3xl p-8 shadow-2xl">
          <div class="text-white text-center">
            <div class="w-20 h-20 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-4">Ready to Build?</h3>
            <p class="text-primary-100 mb-6">Let's transform your ideas into powerful digital solutions</p>
            
            <!-- Tech Stack Icons -->
            <div class="grid grid-cols-3 gap-4 mb-6">
              <div class="bg-white/10 rounded-lg p-3 text-center">
                <div class="text-2xl mb-1">‚öõÔ∏è</div>
                <div class="text-xs">React</div>
              </div>
              <div class="bg-white/10 rounded-lg p-3 text-center">
                <div class="text-2xl mb-1">üîó</div>
                <div class="text-xs">Blockchain</div>
              </div>
              <div class="bg-white/10 rounded-lg p-3 text-center">
                <div class="text-2xl mb-1">ü§ñ</div>
                <div class="text-xs">AI/Auto</div>
              </div>
            </div>
            
            <!-- Availability Badge -->
            <div class="bg-green-500 text-white rounded-full px-4 py-2 text-sm font-medium inline-flex items-center">
              <span class="w-2 h-2 bg-white rounded-full mr-2 animate-pulse"></span>
              Available for New Projects
            </div>
          </div>
        </div>
        
        <!-- Value Propositions Cards -->
        <div class="grid grid-cols-1 gap-4 mt-8">
          <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <div>
                <div class="font-semibold text-gray-900">Fast Delivery</div>
                <div class="text-sm text-gray-600">Projects delivered in 2-8 weeks</div>
              </div>
            </div>
          </div>
          
          <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <div class="font-semibold text-gray-900">Quality Assured</div>
                <div class="text-sm text-gray-600">100% client satisfaction rate</div>
              </div>
            </div>
          </div>
          
          <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                </svg>
