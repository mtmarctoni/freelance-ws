---
// Portfolio showcase section
---

<section id="portfolio" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
        Featured Projects
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        A showcase of real projects demonstrating expertise in modern web development, 
        blockchain technology, and full-stack solutions.
      </p>
    </div>
    
    <!-- Filter Buttons -->
    <div class="flex flex-wrap justify-center gap-4 mb-12">
      <button class="filter-btn active" data-filter="all">All Projects</button>
      <button class="filter-btn" data-filter="web3">Web3 & Blockchain</button>
      <button class="filter-btn" data-filter="fullstack">Full-Stack Apps</button>
      <button class="filter-btn" data-filter="frontend">Frontend</button>
    </div>
    
    <!-- Projects Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="portfolio-grid">
      <!-- Finance App -->
      <div class="portfolio-item" data-category="fullstack">
        <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group">
          <div class="relative overflow-hidden">
            <img 
              src="https://images.unsplash.com/photo-1554224155-6726b3ff858f?w=600&h=400&fit=crop&auto=format&q=80"
              alt="Finance App"
              class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <div class="absolute bottom-4 left-4 right-4 transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300 opacity-0 group-hover:opacity-100">
              <div class="flex gap-2">
                <a href="https://finanzapp-unicap.vercel.app" class="bg-white text-gray-900 px-3 py-1 rounded-full text-sm font-medium hover:bg-gray-100 transition-colors">
                  Live Demo
                </a>
                <a href="https://github.com/mtmarctoni/finanzapp" class="bg-primary-600 text-white px-3 py-1 rounded-full text-sm font-medium hover:bg-primary-700 transition-colors">
                  View Code
                </a>
              </div>
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Finance Tracker App</h3>
            <p class="text-gray-600 mb-4">Full-stack finance application for tracking daily expenses and income with authentication and PostgreSQL database.</p>
            <div class="flex flex-wrap gap-2 mb-4">
              <span class="tech-tag">Next.js</span>
              <span class="tech-tag">TypeScript</span>
              <span class="tech-tag">PostgreSQL</span>
              <span class="tech-tag">NextAuth</span>
              <span class="tech-tag">Tailwind CSS</span>
            </div>
            <div class="flex items-center justify-between text-sm text-gray-500">
              <span>Full-Stack App</span>
              <span>Live on Vercel</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Web3 Lottery -->
